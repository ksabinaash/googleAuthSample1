
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container">
        <div class="jumbotron bg-success">
            <h2>Discount Management</h2>
        </div>
        <br />
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        <script>
            $(document).ready(function () {
                $('#btnGoogleLogin').click(function () {
                    window.location.href = "/api/Account/ExternalLogin?provider=Google&response_type=token&client_id=self&redirect_uri=https%3A%2F%2Flocalhost%3A44330%2FData&state=AiqAPWJX_pGQwXQupJoTcBmuhR9Xs2hLsaR77HTDzOw1";
                });
            });
        </script>
        <div class="row">
            <table class="table table-bordered">
                <thead>
                    <tr class="success">
                        <th>
                            Social Logins
                        </th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>
                            <input type="button" id="btnGoogleLogin"
                                   value="Login with Google" class="btn btn-primary" />
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        <div class="row">
            <h4 class="alert-success">@ViewBag.Message</h4>
        </div>
    </div>
</body>
</html>